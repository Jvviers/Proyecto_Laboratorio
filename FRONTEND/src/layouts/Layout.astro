---
import "@fontsource-variable/geologica";
import '@fontsource-variable/montserrat';
import Navbar from "../sections/Navbar.vue";
import Footer from "../sections/Footer.astro";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Laboratorios Universidad de Talca" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/icons/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<main class="flex flex-col items-center justify-center w-full min-h-screen overflow-hidden">
			<Navbar client:load/>
			<slot />
			<Footer />
		</main>
	</body>
</html>
<style is:global>
	body {
		font-family: "Montserrat Variable", sans-serif;
		color: #242424;
	}
	.geologica {
		font-family: "Geologica Variable", sans-serif;
	}
	.input {
		padding-left: 8px;
		padding-right: 8px;
		padding-top: 4px;
		padding-bottom: 4px;
		border: 1px solid #ccc;
		border-radius: 4px;
		outline: none;
	}
	.input:focus {
		border: #ba0c2f 1px solid;
		outline: #ba0c2f 1px solid;
	}
	.button {
		padding-left: 16px;
		padding-right: 16px;
		padding-top: 8px;
		padding-bottom: 8px;
		border-radius: 4px;
		text-wrap: nowrap;
		font-size: 14px;
		font-weight: 500;
		background-color: #e5e7eb;
		transition: all 0.3s ease;
	}
	.button:hover {
		background-color: #ba0c2f;
		color: #fff;
	}
	.transitions {
		transition: all 0.3s ease;
	}
</style>
