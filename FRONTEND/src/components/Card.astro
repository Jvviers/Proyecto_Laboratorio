---
interface Props {
    text: string;
    url: string;
}

const { text, url } = Astro.props;
---

<a href={url} aria-label="card">
    <div class="flex flex-col justify-start items-center gap-2">
        <div class="bg-gradient-to-b from-neutral-200 to-neutral-400 rounded-full p-2 shadow-md">
            <div class="bg-white rounded-full p-2">
                <div class="flex justify-center items-center p-6 border-2 border-utal border-dashed bg-white rounded-full">
                    <slot />
                </div>
            </div>
        </div>
        <button class="w-full font-bold text-lg" type="button">
            {text}
        </button>
    </div>
</a>

<style scoped>
    div:hover {
        img {
            transform: scale(1.1);
            transition: all 0.3s ease;
        }
    }
</style>