---
interface Props {
    text: string;
    url: string;
}

const { text, url } = Astro.props;
---

<a href={url} aria-label="card">
    <div class="flex flex-col justify-end items-center gap-4 p-4 w-32 h-48">
        <slot />
        <button class="button" type="button">
            {text}
        </button>
    </div>
</a>

<style scoped>
    div:hover {
        button {
            background-color: #00cdcd;
            color: #fff;
        }
    }
</style>
