---
interface Props {
    text: string;
    url: string;
}

const { text, url } = Astro.props;
---

<a href={url} aria-label="card">
    <div class="flex flex-col justify-between items-center gap-4 p-4 w-32 h-48">
        <slot />
        <button class="bg-gray-600 hover:bg-gray-500 text-white font-bold py-2 px-4 text-nowrap rounded">
            {text}
        </button>
    </div>
</a>
