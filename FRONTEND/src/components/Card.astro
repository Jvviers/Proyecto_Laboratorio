---
interface Props {
    text: string;
    url: string;
}

const { text, url } = Astro.props;
---

<a href={url} aria-label="card">
    <div class="flex flex-col justify-between items-center gap-4 p-4 w-32 h-48">
        <slot />
        <button class="px-4 py-2 bg-gray-600 text-white">
            {text}
        </button>
    </div>
</a>
